#import kai("posix")
#import kai("arrays")
#import "src/rng.kai"

// print hex with %x or %lx

main :: fn () -> void {
    
    state : u64

    state = 8746657
    
    random = rng.lcg6432(&state)

    posix.printf("random = %d\n".raw, random)
    posix.printf("state = %lx\n".raw, state)

    N := 10000
    randSum : f64 = 0
    for i:=0; i<N; i+=1 {
        randSum += rng.randFloat(&state)
    }
    posix.printf("avg = %.10f\n".raw, randSum / cast(f64) N)

    
}



